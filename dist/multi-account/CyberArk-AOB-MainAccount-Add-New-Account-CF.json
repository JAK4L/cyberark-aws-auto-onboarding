{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Resources": {
		"ElasticityLambdaTrustPolicy": {
			"Type": "AWS::IAM::ManagedPolicy",
			"Properties": {
				"Description" : "CyberArk Auto On Boarding Policy for Elasticity Lambda in Main Account to assume role in Secondary Account",
				"PolicyDocument" : {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Sid": "VisualEditor0",
							"Effect": "Allow",
							"Action": "sts:AssumeRole",
							"Resource": [
							{
								"Fn::Join":
								[
									"",
									[
										"arn:aws:iam::",
										{
										"Ref": "SecondaryAccountID"
										},
										":role/CyberArk-AOB-AssumeRoleForElasticityLambda"
									]
								]
							}
						]
						}
					]
				},
				"Roles": [
					"CyberArk-AOB-ElasticityLambdaRole"
				]
			}
		}
	},
	"Description": "",
	"Parameters": {
		"SecondaryAccountID": {
            "Type": "String",
            "Description": "The ID of the Secondary Account"
        }
	},
	"Conditions": {

	},
	"Metadata": {
		"AWS::CloudFormation::Interface": {
            "ParameterGroups": [
                {
					"Label": {
						"default": "General parameters"
					},
                    "Parameters": [
						"SecondaryAccountID"
                    ]
                }
            ],
            "ParameterLabels": {
                "SecondaryAccountID": {
                    "default": "Secondary Account ID"
                }
        }
	}
	},
	"Mappings": {

	}
}